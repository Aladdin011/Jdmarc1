# ─── Application ───────────────────────────────────────
NODE_ENV=development
PORT=5000

# ─── MongoDB Connection ────────────────────────────────
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/jdmarc-db?retryWrites=true&w=majority

# ─── Security ───────────────────────────────────────────
JWT_SECRET=super_secure_jwt_key_here
JWT_EXPIRES_IN=7d

# ─── Rate Limiting ──────────────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# ─── Logging ────────────────────────────────────────────
LOG_LEVEL=info
